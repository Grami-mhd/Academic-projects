<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="{{asset ('bundles/admin/assets/img/favicon.ico')}}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Guest House Admin DashBoard</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="{{asset ('bundles/admin/assets/css/bootstrap.min.css')}}" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="{{asset ('bundles/admin/assets/css/animate.min.css')}}" rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="{{asset ('bundles/admin/assets/css/light-bootstrap-dashboard.css')}}" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="{{asset ('bundles/admin/assets/css/demo.css')}}" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="{{asset ('bundles/admin/assets/css/pe-icon-7-stroke.css')}}" rel="stylesheet" />

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="{{asset ('bundles/admin/assets/img/sidebar-5.jpg')}}">

        <!--

            Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
            Tip 2: you can also add an image using data-image tag

        -->

        <div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    Guest House
                </a>
            </div>

            <ul class="nav">
                <li>
                    <a href="Admin_home">
                        <i class="pe-7s-graph"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_users">
                        <i class="pe-7s-user"></i>
                        <p>Manage Users</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_demends">
                        <i class="pe-7s-note2"></i>
                        <p>Forums Demands</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_rforums">
                        <i class="pe-7s-news-paper"></i>
                        <p>R.Forums</p>
                    </a>
                </li>

                <li>
                    <a href="Admin_rmessages/0">
                        <i class="pe-7s-mail"></i>
                        <p>R.Messages</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_rcomments">
                        <i class="pe-7s-comment"></i>
                        <p>R.Comments</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_map">
                        <i class="pe-7s-map-marker"></i>
                        <p>Maps</p>
                    </a>
                </li>
                <li  class="active">
                    <a href="Admin_claims">
                        <i class="pe-7s-bell"></i>
                        <p>Claims</p>
                    </a>
                </li>
                <li class="active-pro">
                    <a href="home">
                        <i class="pe-7s-home"></i>
                        <p>Home</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Dashboard</a>
                </div>
                <div class="collapse navbar-collapse">


                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="Admin_profile">
                                Account
                            </a>
                        </li>
                        <li>
                            <a href="logout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">
            {% if claim is null %}
                <center>
                    <h1>There is No Claims To Treat</h1>
                </center>
            {% else %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">

                                        <div class="header">
                                            <h4 class="title">Traveler info</h4>
                                        </div>
                                        <div class="content">
                                            <div class="header">
                                                <h4 class="title">{{ traveler.firstname }} {{ traveler.lastname }}</h4>
                                                <p class="category">{{ traveler.email }}, {{ traveler.phone }}</p>
                                                <p class="category">{{ traveler.points }} point</p>
                                            </div>
                                            <div class="content">
                                                {% if traveler.picture is null %}
                                                    <img src="{{asset ('bundles/guesthouse/UserImage.png')}}" alt="" height="270" width="245">
                                                {% else %}
                                                    <img alt="Embedded Image" src="data:image/png;base64,{{ pictures[traveler.email] }}" height="270" width="245">
                                                {% endif %}
                                                <div class="footer">

                                                    <hr>
                                                    <div class="stats">
                                                        <h4>
                                                            Number Of Stays :
                                                        </h4>
                                                        <h4>
                                                            Number Of Claims :
                                                        </h4>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        </div>


                        </div>
                    <div class="col-md-4">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Claim</h4>
                            <p class="category"> {{ claim.date|date("d/m/Y") }}</p>
                        </div>
                        <div class="content">
                            <div class="header">
                                <h4 class="title">{{ claim.text }}</h4>
                            </div>

                        </div>
                    </div>
                </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Host info</h4>
                            </div>
                            <div class="content">
                                    <div class="header">
                                        <h4 class="title">{{ host.firstname }} {{ host.lastname }}</h4>
                                        <p class="category">{{ host.email }}, {{ host.phone }}</p>
                                        <p class="category"> {{ host.points }} point</p>
                                    </div>
                                    <div class="content">
                                        {% if host.picture is null %}
                                            <img src="{{asset ('bundles/guesthouse/UserImage.png')}}" alt="" height="270" width="245">
                                        {% else %}
                                            <img alt="Embedded Image" src="data:image/png;base64,{{ pictures[host.email] }}" height="270" width="245">
                                        {% endif %}
                                        <div class="footer">

                                            <hr>
                                            <div class="stats">
                                                <h4>
                                                    Number of Houses
                                                </h4>
                                                <h4>
                                                    Has been claimed about times
                                                </h4>
                                                <h4>
                                                    Has Hosted Person
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-6">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">House informations</h4>
                                <p class="category">price : {{ claim.fkClaimHouseid.price }}</p>
                                <p class="category">Adress : {{ claim.fkClaimHouseid.country }},{{ claim.fkClaimHouseid.town }}</p>
                                <p class="category">nature :{{ claim.fkClaimHouseid.nature }}</p>
                                <p class="category">{{ claim.fkClaimHouseid.description }}</p>
                            </div>
                            <div class="content">

                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Penalties : </h4>
                                <p class="category">You can choose one or more penalty </p>
                            </div>
                            <form method="post">
                            <div class="content">
                                <div class="table-full-width">

                                    <table class="table">
                                        <tbody>
                                        <tr>
                                            <td>
                                                <label class="checkbox">
                                                    <input type="checkbox" value="1" name="dhost" data-toggle="checkbox">
                                                </label>
                                            </td>
                                            <td colspan="2">Delete the host.</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label class="checkbox" id="refundch">
                                                    <input type="checkbox" value="1" data-toggle="checkbox" name="dtraveler">
                                                </label>
                                            </td>
                                            <td colspan="2">Delete the traveler</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label class="checkbox">
                                                    <input type="checkbox" value="1" data-toggle="checkbox" name="dhouse">
                                                </label>
                                            </td>
                                            <td colspan="2">Delete the House</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label class="checkbox">
                                                    <input type="checkbox" value="1" name="refund" data-toggle="checkbox">
                                                </label>
                                            </td>
                                            <td>refund </td>
                                            <td class="td-actions text-right">
                                                <input type="number" id="refund" name="refundpoints" max="{{ host.points }}" min="0">

                                                </input>
                                            </td>
                                        </tr>

                                        </tbody>
                                    </table>
                                </div>

                                <div class="footer">
                                    <hr>
                                    <div class="stats">

                                        <a href="#"><i  class="pe-7s-hammer" ></i>  <input type="submit" value="validate penalties"> </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

{% if claim is not null %}
        <footer class="footer">
            <div class="container-fluid">

                <p class="copyright pull-right">
                    In Order to view the next Claim you have to take a decision about this one
                </p>
            </div>
        </footer>
{% endif %}
    </div>
</div>


</body>

