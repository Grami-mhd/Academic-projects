<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="{{asset ('bundles/admin/assets/img/favicon.ico')}}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Guest House Admin DashBoard</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="{{asset ('bundles/admin/assets/css/bootstrap.min.css')}}" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="{{asset ('bundles/admin/assets/css/animate.min.css')}}" rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="{{asset ('bundles/admin/assets/css/light-bootstrap-dashboard.css')}}" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="{{asset ('bundles/admin/assets/css/demo.css')}}" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="{{asset ('bundles/admin/assets/css/pe-icon-7-stroke.css')}}" rel="stylesheet" />

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="{{asset ('bundles/admin/assets/img/sidebar-5.jpg')}}">

        <!--

            Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
            Tip 2: you can also add an image using data-image tag

        -->

        <div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    Guest House
                </a>
            </div>

            <ul class="nav">
                <li>
                    <a href="Admin_home">
                        <i class="pe-7s-graph"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_users">
                        <i class="pe-7s-user"></i>
                        <p>Manage Users</p>
                    </a>
                </li>
                <li class="active">
                    <a href="Admin_demends">
                        <i class="pe-7s-note2"></i>
                        <p>Forums Demands</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_rforums">
                        <i class="pe-7s-news-paper"></i>
                        <p>R.Forums</p>
                    </a>
                </li>

                <li>
                    <a href="Admin_rmessages/0">
                        <i class="pe-7s-mail"></i>
                        <p>R.Messages</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_rcomments">
                        <i class="pe-7s-comment"></i>
                        <p>R.Comments</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_map">
                        <i class="pe-7s-map-marker"></i>
                        <p>Maps</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_claims">
                        <i class="pe-7s-bell"></i>
                        <p>Claims</p>
                    </a>
                </li>
                <li class="active-pro">
                    <a href="home">
                        <i class="pe-7s-home"></i>
                        <p>Home</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Forum Creation Demands</a>
                </div>
                <div class="collapse navbar-collapse">


                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="Admin_profile">
                                Account
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                               Actions
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#" id="acceptall">Accept All</a></li>
                                <li class="divider"></li>
                                <li><a href="#" id="refuseall">Refuse All</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="logout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content" id="content">
            {% for forum in forums %}
            <div class="col-md-12">
                <div class="card">

                    <div class="header">


                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav navbar-left">
                                <li>
                                    <h4 class="dropdown" style="padding-bottom: 20px" >

                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            {% if forum.fkForumOwnerid.picture is null %}
                                                <img src="{{asset ('bundles/admin/assets/img/UserMiniImage.png')}}">
                                            {% else %}
                                                <img alt="Embedded Image" src="data:image/png;base64,{{ images[forum.fkForumOwnerid.id] }}" height="50" width="50">
                                            {% endif %}

                                            {{ forum.fkForumOwnerid.firstname }} {{ forum.fkForumOwnerid.lastname }}
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a>First Name :{{ forum.fkForumOwnerid.firstname }}</a></li>
                                            <li><a>Last Name :{{ forum.fkForumOwnerid.lastname }}</a></li>
                                            <li><a>Email :{{ forum.fkForumOwnerid.email }}</a></li>
                                            <li><a>Points :{{ forum.fkForumOwnerid.points }}</a></li>
                                            <li><a>Adress :{{ forum.fkForumOwnerid.country }}{{ forum.fkForumOwnerid.town }}</a></li>
                                        </ul>

                                    </h4>
                                </li>

                            </ul>

                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown" >
                                    {% if other[forum.fkForumOwnerid.id]|length ==0 %}
                                <li><a href="#" style="color: #204d74">no other discussions</a></li>
                                {% else %}
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: #204d74">
                                        other active discussions
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">

                                            {% for f in other[forum.fkForumOwnerid.id] %}
                                            <li><a href="#">{{ f.subject }} :<b style="color: rebeccapurple">{{ numbers[f.id] }} messages</b></a></li>
                                            {% endfor %}
                                    </ul>
                                {% endif %}
                                </li>
                                <li class="accept" id="{{ forum.id }}">
                                    <a href="#">
                                        <i class="pe-7s-like2" ></i>
                                        accept
                                    </a>
                                </li>

                                <li class="decline" id="*{{ forum.id }}">
                                    <a href="#" style="color: red">
                                        <i class="pe-7s-junk"></i>
                                        decline

                                    </a>
                                </li>
                            </ul>
                        </div>
                        <p class="category" style="font-size: 20px">{{ forum.subject  }}</p>

                    </div>

                </div>
            </div>
            {% endfor %}
        </div>



    </div>
</div>


</body>

<!--   Core JS Files   -->
<script src="{{asset ('bundles/admin/assets/js/jquery-1.10.2.js')}}" type="text/javascript"></script>
<script src="{{asset ('bundles/admin/assets/js/bootstrap.min.js')}}" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="{{asset ('bundles/admin/assets/js/bootstrap-checkbox-radio-switch.js')}}"></script>

<!--  Charts Plugin -->
<script src="{{asset ('bundles/admin/assets/js/chartist.min.js')}}"></script>

<!--  Notifications Plugin    -->
<script src="{{asset ('bundles/admin/assets/js/bootstrap-notify.js')}}"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="{{asset ('bundles/admin/assets/js/light-bootstrap-dashboard.js')}}"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="{{asset ('bundles/admin/assets/js/demo.js')}}"></script>

<script type="text/javascript">
    $(document).ready(function(){
        $(".accept").click(
                function () {
                    var id= $(this).attr("id");
                    $.ajax({
                        url: "acceptforum/" + id,
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })
                }
        );
        $(".decline").click(
                function () {
                    var id= $(this).attr("id");
                    id=id.substr(1,id.length);

                    $.ajax({
                        url: "declineforum/" + id,
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })
                }
        );
        $("#refuseall").click(
                function () {
                    $.ajax({
                        url: "declineall",
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })
                }
        );
        $("#acceptall").click(
                function () {
                    $.ajax({
                        url: "acceptall",
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })
                }
        );

    });
</script>

</html>
