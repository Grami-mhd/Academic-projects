<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="{{asset ('bundles/admin/assets/img/favicon.ico')}}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Guest House Admin DashBoard</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="{{asset ('bundles/admin/assets/css/bootstrap.min.css')}}" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="{{asset ('bundles/admin/assets/css/animate.min.css')}}" rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="{{asset ('bundles/admin/assets/css/light-bootstrap-dashboard.css')}}" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="{{asset ('bundles/admin/assets/css/demo.css')}}" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="{{asset ('bundles/admin/assets/css/pe-icon-7-stroke.css')}}" rel="stylesheet" />

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="{{asset ('bundles/admin/assets/img/sidebar-5.jpg')}}">

        <!--

            Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
            Tip 2: you can also add an image using data-image tag

        -->

        <div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    Guest House
                </a>
            </div>

            <ul class="nav">
                <li>
                    <a href="Admin_home">
                        <i class="pe-7s-graph"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_users">
                        <i class="pe-7s-user"></i>
                        <p>Manage Users</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_demends">
                        <i class="pe-7s-note2"></i>
                        <p>Forums Demands</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_rforums">
                        <i class="pe-7s-news-paper"></i>
                        <p>R.Forums</p>
                    </a>
                </li>

                <li>
                    <a href="Admin_rmessages/0">
                        <i class="pe-7s-mail"></i>
                        <p>R.Messages</p>
                    </a>
                </li>
                <li  class="active">
                    <a href="Admin_rcomments">
                        <i class="pe-7s-comment"></i>
                        <p>R.Comments</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_map">
                        <i class="pe-7s-map-marker"></i>
                        <p>Maps</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_claims">
                        <i class="pe-7s-bell"></i>
                        <p>Claims</p>
                    </a>
                </li>
                <li class="active-pro">
                    <a href="home">
                        <i class="pe-7s-home"></i>
                        <p>Home</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Reported Comments</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="Admin_profile">
                                Account
                            </a>
                        </li>
                        <li>
                            <a href="logout">
                                Log out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div class="content" id="content">

            {% for comment in comments %}
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav navbar-left">
                                    <li>
                                        <h4 class="dropdown" style="padding-bottom: 20px" >

                                            <a  href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: #900000;">
                                                {% if comment.fkCommentOwnerid.picture is null %}
                                                    <img src="{{asset ('bundles/admin/assets/img/UserMiniImage.png')}}">
                                                {% else %}
                                                    <img alt="Embedded Image" src="data:image/png;base64,{{ images[comment.fkCommentOwnerid.id] }}" height="50" width="50">
                                                {% endif %}


                                                {{ comment.fkCommentOwnerid.firstname }} {{ comment.fkCommentOwnerid.lastname }}

                                                <b class="caret"></b>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a>First Name :{{ comment.fkCommentOwnerid.firstname }}</a></li>
                                                <li><a>Last Name :{{ comment.fkCommentOwnerid.lastname }}</a></li>
                                                <li><a>Email :{{ comment.fkCommentOwnerid.email }}</a></li>
                                                <li><a>Points :{{ comment.fkCommentOwnerid.points }}</a></li>
                                                <li><a>Adress :{{ comment.fkCommentOwnerid.country }}{{ comment.fkCommentOwnerid.town }}</a></li>
                                            </ul>

                                        </h4>
                                    </li>

                                </ul>

                                <ul class="nav navbar-nav navbar-right">

                                    <li>
                                        <a href="#" style="color: #024433">
                                            <i class="pe-7s-close"></i>
                                            View House
                                        </a>
                                    </li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: #024433; font-weight: bold">
                                            Reported By :
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            {% for u in comment.fkCommentReportOwnerid %}
                                                <li><a href="#">{{ u.firstname }} {{ u.lastname }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li class="decline" id="{{ comment.id }}">
                                        <a href="#" style="color: #024433">
                                            <i class="pe-7s-close"></i>
                                            Decline Report
                                        </a>
                                    </li>

                                    <li class="deletecom" id="dc{{ comment.id }}">
                                        <a href="#" style="color: #920000">
                                            <i class="pe-7s-junk"></i>
                                            Delete Comment
                                        </a>
                                    </li>

                                    <li class="deleteowner" id="do{{ comment.id }}">
                                        <a href="#" style="color: #920000">
                                            <i class="pe-7s-junk"></i>
                                            Delete Owner ?
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <p class="category" style="font-size: 20px">{{ comment.comment }}</p>
                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>


    </div>
</div>


</body>

<!--   Core JS Files   -->
<script src="{{asset ('bundles/admin/assets/js/jquery-1.10.2.js')}}" type="text/javascript"></script>
<script src="{{asset ('bundles/admin/assets/js/bootstrap.min.js')}}" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="{{asset ('bundles/admin/assets/js/bootstrap-checkbox-radio-switch.js')}}"></script>

<!--  Charts Plugin -->
<script src="{{asset ('bundles/admin/assets/js/chartist.min.js')}}"></script>

<!--  Notifications Plugin    -->
<script src="{{asset ('bundles/admin/assets/js/bootstrap-notify.js')}}"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="{{asset ('bundles/admin/assets/js/light-bootstrap-dashboard.js')}}"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="{{asset ('bundles/admin/assets/js/demo.js')}}"></script>

<script type="text/javascript">
    $(document).ready(function(){
        $(".deleteowner").click(
                function () {
                    if(confirm("delete the owner ?")){
                    var id =$(this).attr("id");
                    id=id.substr(2,id.length);
                    $.ajax({
                        url: "deletecommentowner/" + id,
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })}
                }
        );
        $(".deletecom").click(
                function () {
                    var id =$(this).attr("id");
                    id=id.substr(2,id.length);
                    $.ajax({
                        url: "deletecommentadmin/" + id,
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })
                }
        );
        $(".decline").click(
                function () {
                    var id =$(this).attr("id");
                    $.ajax({
                        url: "declinecommentreport/" + id,
                        success :function (result) {
                            $("#content").html(result);
                        }
                    })
                }
        );


    });
</script>

</html>
