<script type="text/javascript">
    $(document).ready(function(){
        $("button").click(
                function () {
                    var id =$(this).attr("id");
                    var type= id.substr(0,3);
                    id=id.substr(3,id.length);
                    if(type=="acc"){
                        $.ajax({
                            url: "../deletemsg/" + id+"/{{ page }}",
                            success :function (result) {
                                $("#content").html(result);
                            }
                        })
                    }else if(type=="dec"){
                        $.ajax({
                            url: "../declinemsgreport/" + id+"/{{ page }}",
                            success :function (result) {
                                $("#content").html(result);
                            }
                        })
                    }

                }
        );
        $(".otherps").click(
                function () {
                    var id =$(this).attr("id");
                    var type= id.substr(0,3);
                    id=id.substr(3,id.length);
                    if(type=="ban"){
                        $.ajax({
                            url: "../banuser/" + id+"/{{ page }}",
                            success :function (result) {
                                $("#content").html(result);
                            }
                        })
                    }else if(type=="not"){
                        $.ajax({
                            url: "../notifyuser/" + id+"/{{ page }}",
                            success :function (result) {
                                $("#content").html(result);
                            }
                        })
                    }
                    else if(type=="del"){
                        if(confirm("confirm deleting the messages owner")){
                        $.ajax({
                            url: "../deletemsgowner/" + id+"/{{ page }}",
                            success :function (result) {
                                $("#content").html(result);
                            }
                        })}
                    }
                }
        );
    });
</script>

</html>
