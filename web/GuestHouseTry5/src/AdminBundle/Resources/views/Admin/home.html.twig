            <div class="logo">
                <a class="simple-text">
                    Guest House
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href="Admin_home">
                        <i class="pe-7s-graph"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_users">
                        <i class="pe-7s-user"></i>
                        <p>Manage Users</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_demends">
                        <i class="pe-7s-note2"></i>
                        <p>Forums Demands</p>
                    </a>
                </li>
                <li>
                    <a href="Admin_rforums">
                        <i class="pe-7s-news-paper"></i>
