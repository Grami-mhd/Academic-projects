                    </ul>
                </div>
            </div>
        </nav>


        <div class="content">

            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12" style="overflow-y: auto; height: 400px">

                        <div class="card">
                            <div class="header">
                                <h4 class="title">List of all the houses</h4>
                            </div>

                            <div class="content table-responsive table-full-width">

                                <table class="table table-hover table-striped">
                                    <thead>
                                    <th>ID</th>
                                    <th>Owner</th>
                                    <th>Price</th>
                                    <th>Country</th>
                                    <th>City</th>
                                    </thead>
                                    <tbody>
                                        {% for h in houses %}

                                            <tr >
                                                <td class="house" id="{{ h.id }}"><a href="#">{{ h.id }}</a></td>
                                                <td>{{ h.fkUser.firstname }} {{ h.fkUser.lastname }}</td>
                                                <td>{{ h.price }}pt</td>
                                                <td>{{ h.country }}</td>
                                                <td>{{ h.town }}</td>
                                            </tr>

                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>



                    <div class="col-md-12" >
                        <div class="card card-plain">
                            <div class="header">
                                <h4 class="title"><div id="rate"></div></h4>

                            </div>
                            <div  class="content table-responsive table-full-width">
                                {#tab here#}
                                    <div id="chartcont"></div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
