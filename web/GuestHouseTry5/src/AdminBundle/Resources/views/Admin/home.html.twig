<script type="text/javascript">

    $(document).ready(function(){

        $(".house").click(
                function () {
                    var id =$(this).attr("id");

                    $.ajax({
                        url: "stats/"+id,
                        success : function (result) {
                            $("#chartcont").html(result);
                        }
                    })
                }
        );

        {#
                var o =$("#rate").rateYo({
                    {% if houses is not null %}
                    rating: {{ houses[0].rating }},
                {% else %}
                    rating: 0,
                {% endif %}
                    fullStar: true
                });
                #}





        $.notify({
            icon: 'pe-7s-gift',
            message: "Welcome to <b>Guest House Admin Dashboard</b> "

        },{
            type: 'info',
            timer: 4000
        });



    });
</script>





