<ul class="popular-posts">
    {% for f in forums %}

        <li><h6 class="title-bg"><a href="singleforum/{{ f.id }}" >{{ f.subject }} </a></h6>

            <div class="post-summary-footer">
                <ul class="post-data-3">
                    <li><i class="icon-user"></i> {{ f.fkForumOwnerid.firstname }} {{ f.fkForumOwnerid.lastname }} | <i class="icon-comment"></i> <a href="">{{ nb[f.id] }} Comments</a></li>
                </ul>
            </div>
        </li>
    {% endfor %}


</ul>